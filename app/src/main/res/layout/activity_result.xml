<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ResultActivity">


    <LinearLayout
        android:id="@+id/vg_header"
        android:layout_width="350dp"
        android:layout_height="333dp"
        android:background="@drawable/gradient_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_weight"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Calculador IMC"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/Preencha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Confirme abaixo o seu resultado e classificação"
            android:textColor="@color/white"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:maxLength="5"
            android:textColor="@color/white"
            android:textSize="57dp"
            android:textStyle="bold"
            tools:text="23.66" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_classificacao_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="A classificação do seu IMC é :"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/tv_classificacao"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="180dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"


        tools:text="Normal" />
</LinearLayout>

